<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>

    <RootNamespace>Feast.Extensions.Http</RootNamespace>

    <Version>0.1.0</Version>
    <FileVersion>0.1.0</FileVersion>
    <AssemblyVersion>0.1.0</AssemblyVersion>

    <Title>$(AssemblyName)</Title>
    <Product>$(AssemblyName)</Product>
    <PackageId>$(AssemblyName)</PackageId>
    <PackageReleaseNotes>Initial</PackageReleaseNotes>

    <PackageTags>dotnet;yarp;http;buffering;proxy</PackageTags>
    <Description>Manual control http request buffering</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="[1.0.0,)" />
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="[1.0.0,)" />
  </ItemGroup>

</Project>

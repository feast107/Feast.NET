<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net8.0;net6.0</TargetFrameworks>

    <RootNamespace>Feast.Extensions.ServiceDiscovery</RootNamespace>
    
    <Version>0.2.0</Version>
    <FileVersion>0.2.0</FileVersion>
    <AssemblyVersion>0.2.0</AssemblyVersion>
    
    <Title>$(AssemblyName)</Title>
    <Product>$(AssemblyName)</Product>
    <PackageId>$(AssemblyName)</PackageId>
    <PackageReleaseNotes>Refactor naming</PackageReleaseNotes>

    <PackageTags>dotnet;yarp;consul;service discovery;destination resolve;reverse proxy</PackageTags>
    <Description>Configure Consul as the destination resolving backend of Yarp</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Yarp.ReverseProxy" Version="[2.1.0,)"/>
    <PackageReference Include="Consul" Version="[1.6.1.1,)"/>
  </ItemGroup>

</Project>

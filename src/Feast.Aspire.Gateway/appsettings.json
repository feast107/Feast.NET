{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Proxy" : {
    "Routes" : {
      "ApiService": {
        "ClusterId" : "Consul",
        "Match" : {
          "Path" : "{**all}"
        }
      }
    },
    "Clusters" : {
      "Consul" : {
        "Destinations" : {
          "consul/dc1" : {
            "Address" : "https+http://api-service"
          },
          "directly": {
            "Address" : "http://127.0.0.1:5502"
          }
        }
      }
    }
  },
  "Consul": {
    "Host": "consul",
    "Discovery": {
      "Register": false
    }
  }
}
